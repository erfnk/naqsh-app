# =============================================================================
# Naqsh - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local
#
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
# All other variables are server-only.
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/naqsh"

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# Authentication (Better Auth)
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET=""   # Generate with: openssl rand -base64 32
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth (optional)
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# -----------------------------------------------------------------------------
# Email
# -----------------------------------------------------------------------------
# Choose one email provider and configure its variables.

# Resend (recommended)
RESEND_API_KEY=""

# Nodemailer / SMTP (alternative)
# MAIL_HOST=""
# MAIL_PORT=""
# MAIL_USER=""
# MAIL_PASS=""

MAIL_FROM="noreply@example.com"
CONTACT_FORM_TO_MAIL="hello@example.com"

# -----------------------------------------------------------------------------
# Storage (S3-compatible)
# -----------------------------------------------------------------------------
# For local development, use MinIO via docker-compose.
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
NEXT_PUBLIC_AVATARS_BUCKET_NAME="avatars"

# -----------------------------------------------------------------------------
# Payments (optional)
# -----------------------------------------------------------------------------
# Stripe
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Price IDs for subscription plans
NEXT_PUBLIC_PRICE_ID_PRO_MONTHLY=""
NEXT_PUBLIC_PRICE_ID_PRO_YEARLY=""
NEXT_PUBLIC_PRICE_ID_LIFETIME=""

# -----------------------------------------------------------------------------
# Analytics (optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
# NEXT_PUBLIC_UMAMI_TRACKING_ID=""
# NEXT_PUBLIC_MIXPANEL_TOKEN=""
# NEXT_PUBLIC_PLAUSIBLE_URL=""
# NEXT_PUBLIC_POSTHOG_KEY=""
# NEXT_PUBLIC_PIRSCH_CODE=""
