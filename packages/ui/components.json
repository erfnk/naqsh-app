{
	"$schema": "https://ui.shadcn.com/schema.json",
	"style": "base-nova",
	"rsc": true,
	"tsx": true,
	"tailwind": {
		"css": "../../tooling/tailwind/theme.css",
		"baseColor": "stone",
		"cssVariables": true,
		"prefix": ""
	},
	"iconLibrary": "hugeicons",
	"aliases": {
		"components": "@/components",
		"ui": "@/components",
		"utils": "@/lib",
		"lib": "@/lib"
	},
	"registries": {
		"@shadcnblocks": {
			"url": "https://shadcnblocks.com/r/{name}",
			"headers": {
				"Authorization": "Bearer ${SHADCNBLOCKS_API_KEY}"
			}
		}
	}
}
